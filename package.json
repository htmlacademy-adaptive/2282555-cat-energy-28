		"editorconfig-checker": "^5.1.0",
		"eslint": "^8.43.0",
		"gulp": "^4.0.2",
		"gulp-cached": "^1.1.1",
		"gulp-htmlmin": "^5.0.1",
		"gulp-plumber": "^1.2.1",
		"gulp-postcss": "^9.0.1",
		"gulp-remember": "^1.0.1",
		"gulp-sass": "^5.1.0",
		"gulp-sharp-responsive": "^0.4.1",
		"gulp-stacksvg": "^2.0.2",
		"gulp-svgmin": "^4.1.0",
		"gulp-terser": "^2.1.0",
		"gulp-twig": "^1.2.0",
		"husky": "^8.0.3",
